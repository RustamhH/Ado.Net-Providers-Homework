<Window x:Class="ProviderFactory_Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProviderFactory_Homework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Name="tabControl">
            <TabItem Header="MainTab">
                <Grid>
                    
                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20">
                        <TextBlock Text="Providers" FontWeight="Bold" FontSize="15" Margin="0 0 0 10"></TextBlock>
                        <ComboBox Height="25" Width="150"  Name="ProvidersComboBox" SelectionChanged="ProvidersComboBox_SelectionChanged"></ComboBox>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal">

                        <TextBox Height="20" Width="400" AcceptsReturn="True" Name="QueryTextBox" Margin="20"></TextBox>
                        <Button Name="ExecuteButton" Height="20" Width="100" Content="Execute" Click="ExecuteButton_Click"></Button>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
        
    </Grid>
</Window>
